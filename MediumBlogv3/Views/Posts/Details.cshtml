@model MediumBlogv3.Models.Post

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <h1>@Html.DisplayFor(model => model.Title) on @Html.DisplayFor(model => model.Blog.Name)</h1>
        <p>Written by @Html.DisplayFor(model => model.Author.AuthorName) on @Html.DisplayFor(model => model.Date)</p>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-lg-2 col-md-2 col-sm-2">
    </div>
    <div class="col-lg-10 col-md-10 col-sm-10">
        <img src="@Html.DisplayFor(model => model.FeaturedImageURL)" alt="@Html.DisplayFor(model => model.Title)" class="full-image"><br/>
        <p>@Html.DisplayFor(model => model.Content)<p>
    </div>
    <div class="col-lg-2 col-md-2 col-sm-2">
    </div>
</div>











